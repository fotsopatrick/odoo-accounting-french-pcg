<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Comptes Analytiques -->
    <record id="view_account_analytic_account_list" model="ir.ui.view">
        <field name="name">account.analytic.account.custom.list</field>
        <field name="model">account.analytic.account.custom</field>
        <field name="arch" type="xml">
            <list string="Comptes analytiques">
                <field name="code"/>
                <field name="name"/>
                <field name="plan_id"/>
                <field name="partner_id" optional="show"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Solde"/>
            </list>
        </field>
    </record>

    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">account.analytic.account.custom.form</field>
        <field name="model">account.analytic.account.custom</field>
        <field name="arch" type="xml">
            <form string="Compte analytique">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lines"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <span>Lignes</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom du compte"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="plan_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Soldes">
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="balance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_analytic_account_search" model="ir.ui.view">
        <field name="name">account.analytic.account.custom.search</field>
        <field name="model">account.analytic.account.custom</field>
        <field name="arch" type="xml">
            <search string="Rechercher">
                <field name="name"/>
                <field name="code"/>
                <field name="plan_id"/>
                <field name="partner_id"/>
                <group expand="0" string="Grouper par">
                    <filter string="Plan" name="group_plan" context="{'group_by': 'plan_id'}"/>
                    <filter string="Partenaire" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_account_analytic_account" model="ir.actions.act_window">
        <field name="name">Comptes analytiques</field>
        <field name="res_model">account.analytic.account.custom</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_account_analytic_account_search"/>
    </record>

    <!-- Plans Analytiques -->
    <record id="view_account_analytic_plan_list" model="ir.ui.view">
        <field name="name">account.analytic.plan.custom.list</field>
        <field name="model">account.analytic.plan.custom</field>
        <field name="arch" type="xml">
            <list string="Plans analytiques">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="account_count"/>
            </list>
        </field>
    </record>

    <record id="view_account_analytic_plan_form" model="ir.ui.view">
        <field name="name">account.analytic.plan.custom.form</field>
        <field name="model">account.analytic.plan.custom</field>
        <field name="arch" type="xml">
            <form string="Plan analytique">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="account_count"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Comptes" name="accounts">
                            <field name="account_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="balance"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_analytic_plan" model="ir.actions.act_window">
        <field name="name">Plans analytiques</field>
        <field name="res_model">account.analytic.plan.custom</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Lignes Analytiques -->
    <record id="view_account_analytic_line_list" model="ir.ui.view">
        <field name="name">account.analytic.line.custom.list</field>
        <field name="model">account.analytic.line.custom</field>
        <field name="arch" type="xml">
            <list string="Lignes analytiques" editable="top">
                <field name="date"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="partner_id" optional="show"/>
                <field name="general_account_id" optional="show"/>
                <field name="unit_amount" optional="hide"/>
                <field name="amount" sum="Total"/>
                <field name="category" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_account_analytic_line_form" model="ir.ui.view">
        <field name="name">account.analytic.line.custom.form</field>
        <field name="model">account.analytic.line.custom</field>
        <field name="arch" type="xml">
            <form string="Ligne analytique">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="amount"/>
                        <field name="unit_amount"/>
                        <field name="partner_id"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="general_account_id"/>
                        <field name="move_line_id"/>
                    </group>
                    <group>
                        <field name="category"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_account_analytic_line_search" model="ir.ui.view">
        <field name="name">account.analytic.line.custom.search</field>
        <field name="model">account.analytic.line.custom</field>
        <field name="arch" type="xml">
            <search string="Rechercher">
                <field name="name"/>
                <field name="account_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Projet" name="project" domain="[('category', '=', 'project')]"/>
                <filter string="Departement" name="department" domain="[('category', '=', 'department')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Compte" name="group_account" context="{'group_by': 'account_id'}"/>
                    <filter string="Partenaire" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Categorie" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_account_analytic_line" model="ir.actions.act_window">
        <field name="name">Lignes analytiques</field>
        <field name="res_model">account.analytic.line.custom</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_account_analytic_line_search"/>
    </record>

    <!-- Tags Analytiques -->
    <record id="view_account_analytic_tag_list" model="ir.ui.view">
        <field name="name">account.analytic.tag.custom.list</field>
        <field name="model">account.analytic.tag.custom</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_account_analytic_tag" model="ir.actions.act_window">
        <field name="name">Tags analytiques</field>
        <field name="res_model">account.analytic.tag.custom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
