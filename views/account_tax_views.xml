<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Liste des Taxes -->
    <record id="view_account_tax_list" model="ir.ui.view">
        <field name="name">account.tax.custom.list</field>
        <field name="model">account.tax.custom</field>
        <field name="arch" type="xml">
            <list string="Taxes">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="type_tax_use"/>
                <field name="amount_type"/>
                <field name="amount"/>
                <field name="price_include"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Formulaire Taxe -->
    <record id="view_account_tax_form" model="ir.ui.view">
        <field name="name">account.tax.custom.form</field>
        <field name="model">account.tax.custom</field>
        <field name="arch" type="xml">
            <form string="Taxe">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="ex: TVA 20%"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Definition">
                            <field name="type_tax_use"/>
                            <field name="amount_type"/>
                            <field name="amount"/>
                            <field name="description" placeholder="ex: 20%"/>
                        </group>
                        <group string="Options">
                            <field name="active"/>
                            <field name="price_include"/>
                            <field name="include_base_amount"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <group string="Comptes">
                            <field name="account_id"/>
                            <field name="refund_account_id"/>
                        </group>
                        <group string="Societe">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook invisible="amount_type != 'group'">
                        <page string="Taxes enfants" name="children">
                            <field name="children_tax_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="amount_type"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Tags" name="tags">
                            <field name="tag_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Recherche Taxes -->
    <record id="view_account_tax_search" model="ir.ui.view">
        <field name="name">account.tax.custom.search</field>
        <field name="model">account.tax.custom</field>
        <field name="arch" type="xml">
            <search string="Rechercher taxes">
                <field name="name"/>
                <field name="description"/>
                <separator/>
                <filter string="Ventes" name="sale" domain="[('type_tax_use', '=', 'sale')]"/>
                <filter string="Achats" name="purchase" domain="[('type_tax_use', '=', 'purchase')]"/>
                <separator/>
                <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Application" name="group_use" context="{'group_by': 'type_tax_use'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'amount_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Taxes -->
    <record id="action_account_tax" model="ir.actions.act_window">
        <field name="name">Taxes</field>
        <field name="res_model">account.tax.custom</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_account_tax_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creer une nouvelle taxe
            </p>
            <p>
                Configurez vos taxes TVA pour les ventes et les achats.
            </p>
        </field>
    </record>

    <!-- Tags Taxes -->
    <record id="view_account_tax_tag_list" model="ir.ui.view">
        <field name="name">account.tax.tag.custom.list</field>
        <field name="model">account.tax.tag.custom</field>
        <field name="arch" type="xml">
            <list string="Tags de taxe" editable="bottom">
                <field name="name"/>
                <field name="applicability"/>
                <field name="tax_negate"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>

    <record id="action_account_tax_tag" model="ir.actions.act_window">
        <field name="name">Tags de taxe</field>
        <field name="res_model">account.tax.tag.custom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
