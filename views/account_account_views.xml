<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Liste des Comptes -->
    <record id="view_account_account_list" model="ir.ui.view">
        <field name="name">account.account.custom.list</field>
        <field name="model">account.account.custom</field>
        <field name="arch" type="xml">
            <list string="Plan Comptable" decoration-muted="deprecated == True">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="account_class"/>
                <field name="reconcile"/>
                <field name="deprecated" column_invisible="1"/>
                <field name="balance" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Formulaire Compte -->
    <record id="view_account_account_form" model="ir.ui.view">
        <field name="name">account.account.custom.form</field>
        <field name="model">account.account.custom</field>
        <field name="arch" type="xml">
            <form string="Compte">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_move_lines"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field name="move_line_count" widget="statinfo" string="Ecritures"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Obsolete" bg_color="text-bg-danger" invisible="not deprecated"/>
                    <div class="oe_title">
                        <label for="code"/>
                        <h1>
                            <field name="code" placeholder="411000"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Nom du compte"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="account_type"/>
                            <field name="account_class"/>
                            <field name="internal_group" invisible="1"/>
                            <field name="parent_id"/>
                        </group>
                        <group string="Configuration">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id"/>
                            <field name="reconcile"/>
                            <field name="deprecated"/>
                        </group>
                    </group>
                    <group>
                        <group string="Taxes par defaut">
                            <field name="tax_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Tags">
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group string="Soldes">
                        <field name="balance"/>
                        <field name="debit"/>
                        <field name="credit"/>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Recherche Compte -->
    <record id="view_account_account_search" model="ir.ui.view">
        <field name="name">account.account.custom.search</field>
        <field name="model">account.account.custom</field>
        <field name="arch" type="xml">
            <search string="Rechercher un compte">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <separator/>
                <filter string="Rapprochables" name="reconcile" domain="[('reconcile', '=', True)]"/>
                <filter string="Obsoletes" name="deprecated" domain="[('deprecated', '=', True)]"/>
                <separator/>
                <filter string="Actif" name="active" domain="[('deprecated', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="group_type" context="{'group_by': 'account_type'}"/>
                    <filter string="Classe" name="group_class" context="{'group_by': 'account_class'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Comptes -->
    <record id="action_account_account" model="ir.actions.act_window">
        <field name="name">Plan Comptable</field>
        <field name="res_model">account.account.custom</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_account_account_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creer un nouveau compte
            </p>
            <p>
                Le plan comptable organise vos comptes selon les normes comptables francaises (PCG).
            </p>
        </field>
    </record>

    <!-- Tags Comptes -->
    <record id="view_account_tag_list" model="ir.ui.view">
        <field name="name">account.account.tag.custom.list</field>
        <field name="model">account.account.tag.custom</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="applicability"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="action_account_tag" model="ir.actions.act_window">
        <field name="name">Tags de compte</field>
        <field name="res_model">account.account.tag.custom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
