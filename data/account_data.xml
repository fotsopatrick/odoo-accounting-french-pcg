<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences -->
        <record id="sequence_account_move" model="ir.sequence">
            <field name="name">Ecriture comptable</field>
            <field name="code">account.move.custom</field>
            <field name="prefix">MOVE/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
        </record>

        <record id="sequence_account_payment" model="ir.sequence">
            <field name="name">Paiement</field>
            <field name="code">account.payment.custom</field>
            <field name="prefix">PAY/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
        </record>

        <record id="sequence_account_reconcile" model="ir.sequence">
            <field name="name">Lettrage</field>
            <field name="code">account.reconcile.custom</field>
            <field name="prefix">REC</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Methodes de paiement -->
        <record id="payment_method_manual_in" model="account.payment.method.custom">
            <field name="name">Manuel</field>
            <field name="code">manual</field>
            <field name="payment_type">inbound</field>
        </record>

        <record id="payment_method_manual_out" model="account.payment.method.custom">
            <field name="name">Manuel</field>
            <field name="code">manual</field>
            <field name="payment_type">outbound</field>
        </record>

        <record id="payment_method_check_in" model="account.payment.method.custom">
            <field name="name">Cheque</field>
            <field name="code">check</field>
            <field name="payment_type">inbound</field>
        </record>

        <record id="payment_method_check_out" model="account.payment.method.custom">
            <field name="name">Cheque</field>
            <field name="code">check</field>
            <field name="payment_type">outbound</field>
        </record>

        <!-- Conditions de paiement par defaut -->
        <record id="payment_term_immediate" model="account.payment.term.custom">
            <field name="name">Paiement immediat</field>
            <field name="sequence">1</field>
        </record>

        <record id="payment_term_immediate_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_immediate"/>
            <field name="value">balance</field>
            <field name="nb_days">0</field>
        </record>

        <record id="payment_term_15_days" model="account.payment.term.custom">
            <field name="name">15 jours</field>
            <field name="sequence">2</field>
        </record>

        <record id="payment_term_15_days_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_15_days"/>
            <field name="value">balance</field>
            <field name="nb_days">15</field>
        </record>

        <record id="payment_term_30_days" model="account.payment.term.custom">
            <field name="name">30 jours</field>
            <field name="sequence">3</field>
        </record>

        <record id="payment_term_30_days_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_30_days"/>
            <field name="value">balance</field>
            <field name="nb_days">30</field>
        </record>

        <record id="payment_term_30_days_end_month" model="account.payment.term.custom">
            <field name="name">30 jours fin de mois</field>
            <field name="sequence">4</field>
        </record>

        <record id="payment_term_30_days_end_month_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_30_days_end_month"/>
            <field name="value">balance</field>
            <field name="delay_type">days_end_of_month</field>
            <field name="nb_days">30</field>
        </record>

        <record id="payment_term_45_days" model="account.payment.term.custom">
            <field name="name">45 jours</field>
            <field name="sequence">5</field>
        </record>

        <record id="payment_term_45_days_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_45_days"/>
            <field name="value">balance</field>
            <field name="nb_days">45</field>
        </record>

        <record id="payment_term_60_days" model="account.payment.term.custom">
            <field name="name">60 jours</field>
            <field name="sequence">6</field>
        </record>

        <record id="payment_term_60_days_line" model="account.payment.term.line.custom">
            <field name="payment_id" ref="payment_term_60_days"/>
            <field name="value">balance</field>
            <field name="nb_days">60</field>
        </record>

        <!-- Plan Analytique par defaut -->
        <record id="analytic_plan_default" model="account.analytic.plan.custom">
            <field name="name">Plan principal</field>
            <field name="sequence">1</field>
            <field name="description">Plan analytique principal pour le suivi des projets et departements</field>
        </record>

        <record id="analytic_plan_cost_center" model="account.analytic.plan.custom">
            <field name="name">Centres de cout</field>
            <field name="sequence">2</field>
            <field name="description">Suivi des couts par centre de responsabilite</field>
        </record>
    </data>
</odoo>
